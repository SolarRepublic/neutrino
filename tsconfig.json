{
	"extends": "@blake.regalia/tsconfig/tsconfig.web.json",

	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",

		"declaration": true,
		"declarationDir": "dist"
	},

	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"test/**/*.ts",
		"rollup.config.ts"
	],

	"ts-node": {
		"require": ["tsconfig-paths/register"],
		"experimentalSpecifierResolution": "node"
	},
}
