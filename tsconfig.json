{
	"extends": "@blake.regalia/tsconfig/tsconfig.node.json",

	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "dist/nil",

		"declaration": true,
		"declarationDir": "dist/nil",
		"noImplicitReturns": false,
		"module": "ES2022",
		"moduleResolution": "Bundler",
	},

	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"test/**/*.ts",
		"rollup.config.ts"
	]
}
